import 'package:supabase_flutter/supabase_flutter.dart';

Future<bool> supabaseCreateAccount(String email, String password) async {
  final supabase = Supabase.instance.client;

  try {
    final authResponse = await supabase.auth.signUp(
      email: email,
      password: password,
      emailRedirectTo: 'https://yourapp.com/validationemail',
    );

    if (authResponse.user != null) {
      print('Account creation initiated for: ${authResponse.user!.email}');
      return true;
    } else {
      print('Account creation failed: User object is null after sign up.');
      return false;
    }
  } on AuthException catch (e) {
    print('Auth error: ${e.message}');
    return false;
  } catch (e) {
    print('Unexpected error during account creation: $e');
    return false;
  }
}
